                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    contentType: 'application/json;charset=utf-8',
                    url: '/Home/GetHtml',
                    data: "",
                }).done(function (d, x, r) {
                    $("#result-ajax-html").html(d);
                }).fail(function (d) {
